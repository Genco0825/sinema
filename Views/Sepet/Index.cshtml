                            {
                                // HESAPLAMA (En ba≈üta yapƒ±yoruz ki HTML karƒ±≈ümasƒ±n)
                                toplamTutar += urun.ToplamTutar;

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@urun.UrunAdi (x @urun.Adet)</span>
                                    <span class="fw-bold">@urun.ToplamTutar.ToString("C2")</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center text-muted">Toplam Tutar</h3>
                    <h1 class="text-center text-success fw-bold my-3">@toplamTutar.ToString("C2")</h1>
                    <hr />
                    
                    <a asp-controller="Odeme" asp-action="Index" class="btn btn-success btn-lg w-100 mb-2">
                        üí≥ √ñdeme Ekranƒ±na Ge√ß
                    </a>

                    <a asp-action="SepetiBosalt" class="btn btn-outline-danger w-100">
