                        <p>
                            Koltuk No: <strong>@Model.SecilenKoltukNo</strong><br />
                            Bilet Fiyatƒ±:
                            @if (Model.BiletTipi == "Ogrenci")
                            {
                                // HESAPLAMA (C#)
                                decimal indirimliFiyat = Model.SecilenFilm.Fiyat * 0.80m;
                                toplamTutar += indirimliFiyat;

                                // HTML √áIKTISI
                                <span class="text-success fw-bold">@indirimliFiyat.ToString("C2") (%20 ƒ∞ndirimli)</span>
                            }
                            else
                            {
                                // HESAPLAMA (C#)
                                toplamTutar += Model.SecilenFilm.Fiyat;

                                // HTML √áIKTISI
                                <span class="fw-bold">@Model.SecilenFilm.Fiyat.ToString("C2")</span>
                            }
                        </p>
                    </div>
                </div>
            }

            @if (Model.BufeUrunleri.Any())
            {
